{% extends 'partials/base.html.twig' %}

{% block content %}
<section class="projects" id="projects">
    <div class="container">
        <div class="row">
            <div class="eight columns offset-by-two projects__text">
                {{ content }}
            </div>
        </div>
    </div>

    <ul class="projects__list">
    {% for project in page.collection %}
        {% include 'partials/projectlist_item.html.twig' with {'project': project} %}
    {% endfor %}
    </ul>

    {% if not page.isFirst or not page.isLast %}
    <div class="container">
        <div class="row pagination">
            <div class="six columns pagination__prev">
        {% if not page.isLast %}
                <a href="{{ page.prevSibling.url }}">
                    <i class="fa fa-chevron-left"></i>
                    <span class=" hidden-xs">Previous page</span>
                </a>
        {% else %}
                &nbsp;
        {% endif %}
            </div>
            <div class="six columns pagination__next">
        {% if not page.isFirst %}
                <a href="{{ page.nextSibling.url }}">
                    <span class=" hidden-xs">Next page</span>
                    <i class="fa fa-chevron-right"></i>
                </a>
        {% else %}
                &nbsp;
        {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</section>
{% endblock %}
