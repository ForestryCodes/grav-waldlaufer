{% set background_image = project.media.images|first %}
<li class="project" style="background-image: url({% if background_image %}{{ background_image.url }}{% else %}https://unsplash.it/1920/1080/?random{% endif %});">
    <a href="{{ project.url }}">
        <div class="container project__details">
            <div class="row">
                <div class="six columns"><h3>{{ project.title }}</h3></div>
                <div class="six columns">
                    {{ project.summary(200) }}
                </div>
            </div>
        </div>
    </a>
</li>
