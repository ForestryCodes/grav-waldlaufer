{% if config.plugins.simplesearch.enabled %}
<h4>Search</h4>
<input type="search" placeholder="Search..." value="{{ query }}" data-search-input="{{ config.plugins.simplesearch.route}}/query">
{% endif %}
{% if config.plugins.archives.enabled %}
<h4>Archive</h4>
<ul class="blog__sidebar-archive">
    {% for month,items in archives_data %}
    <li>
        <a href="{{ base_url }}/archives_month:{{ month|date('M_Y')|lower|e('url') }}">
            <span class="archive_date">{{ month }}</span>
        {% if archives_show_count %}
            <span>({{ items|length }})</span>
        {% endif %}
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}
{% if config.plugins.feed.enabled %}
<h4>Syndicate</h4>
<a class="button button-primary" href="{{ feed_url }}.atom">
    <i class="fa fa-rss"></i> Atom 1.0
</a>
<a class="button button-primary" href="{{ feed_url }}.rss">
    <i class="fa fa-rss"></i> RSS
</a>
{% endif %}
